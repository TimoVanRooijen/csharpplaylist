@using System.Data;
@using csharpplaylist.App_Code.csharp;

@{
    songMethods songMethods = new songMethods();

    Session["songmethods"] = songMethods;

    DataSet ds = songMethods.GetPlaylist("Playlist.xml");

    if (IsPost)
    {
        songMethods.DeleteSong(Request.QueryString["id"]);
    }

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <link rel="stylesheet" href="~/Content/dialog.css" type="text/css" />
</head>
<body>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Weet u het zeker dat u dit wilt verwijderen</p>
                </div>
                <div class="modal-footer">
                    <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>-->
                    <form method="post" action="">
                        <input class="btn btn-danger" type="submit" value="verwijder" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <header class="toast-header">
            <h1 class="card-title">Playlist</h1>
        </header>
        <nav>

        </nav>
        <content>
            <div>
                Voeg een muziekje toe
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nummer</th>
                        <th scope="col">Artist</th>
                        <th scope="col">Play</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dr in ds.Tables["song"].Rows)
                    {
                        <tr>
                            <td>@dr["title"]</td>
                            <td>@dr["artist"]</td>
                            <td><audio controls><source src="@dr["file"]" type='audio/mpeg'>Your browser does not support the audio element.</audio></td>
                            <td><a id="btnDelete"><i class='fa fa-trash'></i></a><a class="btn btn-primary" href="~/Pages/update.cshtml?id=@dr["id"]"><i class="fas fa-edit"></i></a></td>
                        </tr>
                        ;
                    }
                </tbody>
            </table>
        </content>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        $("#btnDelete").click(function () {
            $("#exampleModal").fadeIn();
        });
    </script>
</body>
</html>
